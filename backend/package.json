{
  "name": "backend",
  "version": "1.0.0",
  "description": "Real-time chat application with Socket.io and RabbitMQ",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"tsx src/index.ts\"",
    "payment": "nodemon --watch src --ext ts --exec \"tsx src/test.payment.ts\"",
    "test": "jest",
    "lint": "cross-env NODE_NO_WARNINGS=1 eslint src --ext .ts,.tsx",
    "build": "prisma generate && tsc",
    "postinstall": "prisma generate",
    "start": "node dist/index.js",
    "build:render": "tsc && node scripts/fix-imports.cjs",
    "admin": "ts-node --loader ts-node/esm src/admin/createAdmin.ts",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "argon2": "^0.40.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}